{
  "openapi": "3.0.3",
  "info": {
    "title": "pdv-ms-tokenizer",
    "description": "Tokenizer API documentation",
    "version": "1.0-SNAPSHOT"
  },
  "servers": [
    {
      "url": "${uri}/{basePath}",
      "variables": {
        "basePath": {
          "default": "/v1"
        }
      }
    }
  ],
  "tags": [
    {
      "name": "token",
      "description": "Token operations"
    }
  ],
  "paths": {
    "/tokens": {
      "put": {
        "x-amazon-apigateway-integration": {
          "type": "HTTP",
          "httpMethod": "PUT",
          "uri": "${uri}/tokens",
          "connectionType": "VPC_LINK",
          "connectionId": "${connection_id}",
          "passthroughBehavior": "WHEN_NO_TEMPLATES",
          "requestTemplates" : {
            "application/json" : "${write_request_template}"
          },
          "responses": {
            "default" : {
              "statusCode" : "200"
            }
          }
        },
        "tags": [
          "token"
        ],
        "summary": "Upsert token",
        "description": "Create a new token given a PII and Namespace, if already exists do nothing",
        "operationId": "saveUsingPUT",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PiiResource"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenResource"
                }
              }
            }
          }
          "401" : {
            "description" : "Unauthorized"
          },
          "403" : {
            "description" : "Forbidden"
          },
          "404" : {
            "description" : "Not Found"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },
    "/tokens/search" : {
      "post" : {
        "x-amazon-apigateway-integration": {
          "type": "HTTP",
          "httpMethod": "POST",
          "uri": "${uri}/tokens/search",
          "connectionType": "VPC_LINK",
          "connectionId": "${connection_id}",
          "passthroughBehavior": "WHEN_NO_TEMPLATES",
          "requestTemplates" : {
            "application/json" : "${write_request_template}"
          },
          "responses": {
            "default" : {
              "statusCode" : "200"
            }
          }
        },
        "tags": [
          "token"
        ],
        "summary": "Search token",
        "description": "Search a token given a PII and Namespace",
        "operationId": "searchUsingPOST",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PiiResource"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenResource"
                }
              }
            }
          }
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },
    "/tokens/{token}/pii" : {
      "get" : {
        "x-amazon-apigateway-integration": {
          "type": "HTTP_PROXY",
          "httpMethod": "GET",
          "uri": "${uri}/tokens/{token}/pii",
          "connectionType": "VPC_LINK",
          "connectionId": "${connection_id}",
          "requestParameters": {
            "integration.request.path.token": "method.request.path.token"
          },
          "responses": {
            "default" : {
              "statusCode" : "200"
            }
          }
        },
        "tags": [
          "token"
        ],
        "summary": "Find PII",
        "description": "Find a PII given a token",
        "operationId": "findPiiUsingGET",
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "description": "Token related to the PII",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PiiResource"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    }
  },
  "components" : {
    "schemas" : {
      "PiiResource" : {
        "title" : "PiiResource",
        "required" : [ "pii" ],
        "type" : "object",
        "properties" : {
          "pii" : {
            "type" : "string",
            "description": "Personal Identifiable Information"
          }
        }
      },
      "TokenResource" : {
        "title": "TokenResource",
        "required": [
          "rootToken",
          "token"
        ],
        "type": "object",
        "properties": {
          "rootToken": {
            "type": "string",
            "description": "Root token related to the PII",
            "format": "uuid"
          },
          "token": {
            "type": "string",
            "description": "Namespaced token related to the PII",
            "format": "uuid"
          }
        }
      }
    },
    "securitySchemes": {
      "api_key": {
        "type": "apiKey",
        "name": "x-api-key",
        "in": "header"
      }
    }
  }
}
