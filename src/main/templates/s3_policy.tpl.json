{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Principal": {
          "AWS": "arn:aws:iam::${account_id}:root"
        },
        "Action": "s3:ListBucket",
        "Resource": "arn:aws:s3:::${bucket_name}"
      },
      {
        "Effect": "Allow",
        "Principal": {
          "AWS": "arn:aws:iam::${account_id}:root"
        },
        "Action": ["s3:GetObject", "s3:PutObject"],
        "Resource": "arn:aws:s3:::${bucket_name}/*"
      }
    ]
  }